<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kauf" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_500</item>
        <item name="colorSecondaryVariant">@color/primary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montsterrat</item>

        <!-- Drawables. -->
        <item name="drawableTint">@color/white</item>
        <item name="android:drawableTint"> @color/white</item>

        <item name="android:editTextBackground">@drawable/rounded_credentials_night</item>
        <item name="android:textViewStyle">@color/white</item>
        <item name="buttonTint">@color/primary_500</item>

        <item name="searchViewStyle">@drawable/rounded_credentials</item>
        <item name="background">@color/black</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>
